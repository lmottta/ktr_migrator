# ================================================================================
# CONFIGURAÇÕES DO BANCO BISPU PARA TESTES KTR
# ================================================================================
# Arquivo: .env.bispu.example
# Para usar: cp .env.bispu.example .env.bispu

# ================================================================================
# BANCO DE DADOS BISPU (Testes KTR)
# ================================================================================
BISPU_DB_NAME=bispu
BISPU_DB_USER=bispu_user
BISPU_DB_PASSWORD=Nuncaperco19*
BISPU_DB_HOST=bispu-db
BISPU_DB_PORT=5433

# ================================================================================
# CONFIGURAÇÕES DE REDE
# ================================================================================
BISPU_NETWORK=ktr-platform-network

# ================================================================================
# PATHS E DIRETÓRIOS
# ================================================================================
BISPU_BACKUP_DIR=./backups/bispu
BISPU_LOGS_DIR=./logs/bispu

# ================================================================================
# CONFIGURAÇÕES DE TESTE
# ================================================================================
BISPU_TEST_MODE=true
BISPU_SCHEMA_DEFAULT=mgc
BISPU_SEARCH_PATH=mgc,etl,tmp,relatorios,public

# ================================================================================
# CREDENCIAIS DE USUÁRIOS BISPU
# ================================================================================
BISPU_ROLE_USER=bispu_user
BISPU_ROLE_PASSWORD=Nuncaperco19*
OLTP_ROLE_USER=oltp
OLTP_ROLE_PASSWORD=oltp_password

# ================================================================================
# CONFIGURAÇÕES DE PERFORMANCE (Testes)
# ================================================================================
BISPU_WORK_MEM=64MB
BISPU_MAINTENANCE_WORK_MEM=256MB
BISPU_EFFECTIVE_CACHE_SIZE=1GB

# ================================================================================
# LOGS E MONITORAMENTO
# ================================================================================
BISPU_LOG_LEVEL=INFO
BISPU_LOG_STATEMENT=mod
BISPU_LOG_MIN_DURATION=500

# ================================================================================
# CONFIGURAÇÕES DE TIMEZONE
# ================================================================================
BISPU_TIMEZONE=America/Sao_Paulo
BISPU_DATESTYLE=ISO,DMY

# ================================================================================
# BACKUP E RESTORE
# ================================================================================
BISPU_BACKUP_RETENTION_DAYS=7
BISPU_BACKUP_SCHEDULE="0 2 * * *"

# ================================================================================
# INTEGRACAO COM KTR PLATFORM
# ================================================================================
KTR_BISPU_INTEGRATION=true
KTR_BISPU_DEFAULT_SCHEMA=mgc
KTR_BISPU_TEST_TABLES=documento,localizacao_imovel 